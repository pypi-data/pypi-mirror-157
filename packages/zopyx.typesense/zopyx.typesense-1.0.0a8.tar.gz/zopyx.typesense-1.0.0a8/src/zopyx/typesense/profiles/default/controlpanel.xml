<?xml version="1.0"?>
<object
    name="portal_controlpanel"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="xmldirector.connector"
    purge="False">

    <configlet
        title="Typesense Settings"
        action_id="zopyx.typesense"
        appId="zopyx.typesense"
        category="Products"
        condition_expr=""
        url_expr="string:${portal_url}/@@typesense-settings"
        visible="True"
        i18n:attributes="title">
            <permission>Manage portal</permission>
        </configlet>

    <configlet
        title="Typesense Administration"
        action_id="zopyx.typesense.admin"
        appId="zopyx.typesense"
        category="Products"
        condition_expr=""
        url_expr="string:${portal_url}/@@typesense-admin"
        visible="True"
        i18n:attributes="title">
            <permission>Manage portal</permission>
    </configlet>
    
</object>
